{
  "name": "k3progetti/software-version-bundle",
  "description": "Bundle Symfony per il controllo software nei nostri progetti",
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Mattia Vitali",
      "email": "m.vitali@k3progetti.it"
    }
  ],
  "require": {
    "php": ">=8.2",
    "symfony/http-foundation": "^7.3",
    "symfony/config": "^7.3",
    "symfony/dependency-injection": "^7.3",
    "symfony/http-kernel": "^7.3",
    "symfony/framework-bundle": "^7.3",
    "symfony/http-client": "~7.3",
    "symfony/validator": "~7.3",
    "symfony/security-bundle": "*",
    "symfony/serializer": "*",
    "ext-curl": "*"
  },
  "autoload": {
    "psr-4": {
      "K3Progetti\\SoftwareVersionBundle\\": "src/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0-dev"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@php bin/register-software-version-bundle.php"
    ],
    "post-update-cmd": [
      "@php bin/register-software-version-bundle.php"
    ],
    "pre-package-uninstall": [
      "@php bin/register-software-version-bundle.php --remove"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
